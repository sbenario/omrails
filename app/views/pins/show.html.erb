<div class="row">
  <div class="span6 offset2">
    <div class="well">
			<%= image_tag @pin.image %>

      <p>
        
        <b>Description:</b>
        <%= @pin.description %>
        <p><small>Updated at: <%= @pin.updated_at %></small>
        <p>Name: <%= @pin.user.fullName %></p>

        <% if current_user == @pin.user %>
          <%= link_to 'Edit', edit_pin_path(@pin) %> |
        <% end %>
        <%= link_to 'Back', pins_path %>	
      
    	</p>
    </div>
  </div>
</div>



